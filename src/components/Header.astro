---
export const navbarItems = [
  {
    label: "Home",
    link: "/",
  },
  {
    label: "About",
    link: "/about",
  },
  {
    label: "Posts",
    link: "/posts",
  },
  {
    label: "Notes",
    link: "/notes",
  },
];
---

<header class="h-screen w-[260px]">
  <nav class="flex flex-col bg-content rounded-lg p-2 h-full space-y-2">
    {
      navbarItems.map((item) => (
        <li>
          <a
            href={item.link}
            class="inline-block px-4 py-2 hover:text-primary duration-300 cursor-pointer w-full rounded-md shadow-sm"
          >
            {item.label}
          </a>
        </li>
      ))
    }
  </nav>
</header>
