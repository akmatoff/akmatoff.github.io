---
import SocialLinks from "./SocialLinks.astro";
import { ClientRouter } from "astro:transitions";
import type { NavbarItem } from "../types";
import SidebarItem from "./SidebarItem.astro";

export const navbarItems: NavbarItem[] = [
  {
    label: "Home",
    link: "/",
    icon: "ri:home-2-fill",
  },
  {
    label: "About",
    link: "/about",
    icon: "ri:user-3-fill",
  },
  {
    label: "Notes",
    link: "/notes",
    icon: "ri:file-list-3-fill",
  },
  {
    label: "Projects",
    link: "/projects",
    icon: "ri:code-s-slash-fill",
  },
];
---

<aside class="flex flex-col h-full space-y-10 p-3 bg-content shadow-sm text-sm">
  <div class="ml-4">
    <h1 class="text-2xl/tight font-medium">Azim Akmatov</h1>
    <p class="text-muted-foreground text-sm">Frontend developer</p>
  </div>
  <nav class="flex flex-col space-y-2">
    <ClientRouter />
    {navbarItems.map((nav) => <SidebarItem nav={nav} />)}
  </nav>

  <SidebarItem
    nav={{
      label: "Resume",
      link: "/resume.pdf",
      icon: "ri:file-text-fill",
      isTargetBlank: true,
    }}
  />

  <SocialLinks />
</aside>
