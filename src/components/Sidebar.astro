---
import { clsx } from "clsx";
export const navbarItems = [
  {
    label: "Home",
    link: "/",
  },
  {
    label: "About",
    link: "/about",
  },
  {
    label: "Notes",
    link: "/notes",
  },
  {
    label: "Projects",
    link: "/projects",
  },
];

const { pathname } = Astro.url;

const isActive = (path: string) =>
  path === pathname || (path !== "/" && pathname.startsWith(path));
---

<aside class="flex flex-col space-y-4 p-4 h-full">
  <div>
    <h1 class="text-2xl/tight">Azim Akmatov</h1>
    <p class="text-muted-foreground">Frontend developer</p>
  </div>
  <nav class="flex flex-col">
    {
      navbarItems.map((nav) => (
        <a
          class={clsx(
            "block py-2 text-muted-foreground",
            isActive(nav.link) && "text-primary"
          )}
          href={nav.link}
        >
          {nav.label}
        </a>
      ))
    }
  </nav>
</aside>
