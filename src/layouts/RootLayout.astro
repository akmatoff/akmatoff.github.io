---
import Sidebar from "../components/Sidebar.astro";
import "../main.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Azim Akmatov | TypeScript Developer, Music Producer</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Geist:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Geist+Mono:wght@100..900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="flex flex-col items-center bg-background text-foreground dark">
    <main class="flex flex-col md:flex-row min-h-screen w-full space-x-2">
      <div class="fixed top-0 w-80 h-full">
        <Sidebar />
      </div>

      <div class="flex flex-1 flex-col items-center p-4">
        <div class="ml-80 lg:w-[38%] py-20">
          <slot />
        </div>
      </div>
    </main>
  </body>
</html>
